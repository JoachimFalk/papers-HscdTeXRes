%
\def\university{\@dblarg\beamer@university}
\long\def\beamer@university[#1]#2{%
  \def\beamer@temp{#2}%
  \ifx\beamer@temp\@empty
    \def\insertuniversity{}
  \else
    \def\insertuniversity{\def\uni{\beamer@uniuni}\def\and{\beamer@anduni}#2}%
  \fi
 \def\beamer@shortuniversity{#1}}
\university{}

\def\beamer@uniuni#1{{\donotcoloroutermaths$^{#1}$}\ignorespaces}
\def\beamer@anduni{\\[1em]}

\newcommand\insertshortuniversity[1][]{%
  {%
    \let\thanks=\@gobble%
    \def\uni{\beamer@uniother}\def\and{\beamer@andother}%
    \beamer@setupshort{#1}%
    \beamer@insertshort{\beamer@shortuniversity}%
  }
}

