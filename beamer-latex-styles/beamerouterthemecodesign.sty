\defbeamertemplate*{footline}{codesign theme}{
  \leavevmode
  \begin{beamercolorbox}[ht=3ex,dp=.125ex,colsep=1.0pt]{upper separation line foot}
    \begin{center}{\color{structure}\rule{\linewidth}{0.1mm}}\end{center}
  \end{beamercolorbox}
  \hbox{
    \begin{beamercolorbox}[wd=.40\paperwidth,ht=4.25ex,dp=1ex,left,leftskip=32pt,rightskip=1pt]{normal text}%
      \fontshape{it}\fontsize{5}{6}\selectfont
      \insertshortuniversity\newline\insertshortauthor
      \vskip 3.5ex
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=.20\paperwidth,ht=4.25ex,dp=1ex,center,ignorebg]{normal text}
      \pgfdeclareimage[height=7ex]{logo}{codesign}\hfill\pgfuseimage{logo}\hspace{.5ex}
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=.40\paperwidth,ht=4.25ex,dp=1ex,right,ignorebg,leftskip=1pt plus1fill,rightskip=32pt]{normal text}
      \hfill\insertframenumber{}
      \vskip 2.0ex
    \end{beamercolorbox}
  }
  \vskip 0pt
}

